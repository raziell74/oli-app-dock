# .editorconfig
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Prettier-specific settings
[*.js,*.ts,*.json]
max_line_length = 100
quote_type = single

[*.css,*.scss,*.less,*.html]
max_line_length = 100

[*.md]
max_line_length = 100
trim_trailing_whitespace = false
